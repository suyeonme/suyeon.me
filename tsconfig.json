{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "baseUrl": "./src",
    "paths" : {
      "src/*": ["./src/*"]
    }
  }
}